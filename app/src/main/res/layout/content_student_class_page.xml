<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_student_class_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ajlyfe.lectureapp.Activity.StudentClassPage"
    tools:showIn="@layout/activity_student_class_page">

    <RelativeLayout android:id="@+id/recyclerViewLecturesHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lectureTitle"
        android:animateLayoutChanges="true">

        <android.support.v7.widget.RecyclerView android:id="@+id/recyclerViewLectures"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="72dp"
            android:clipToPadding="false"/>

    </RelativeLayout>

    <TextView android:id="@+id/lectureTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textSize="28sp"
        android:text="LECTURES"
        android:fontFamily="sans-serif-thin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView android:id="@+id/noLectures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textSize="20sp"
        android:text="No lectures to see here!"
        android:fontFamily="sans-serif-thin"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/lectureTitle"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
