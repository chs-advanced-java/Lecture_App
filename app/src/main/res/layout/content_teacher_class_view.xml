<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teacher_class_overview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.TeacherClassView"
    tools:showIn="@layout/activity_teacher_class_view">

    <TextView android:id="@+id/classTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Class Name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Students"
            android:id="@+id/studentButton" />

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Files"
            android:id="@+id/fileButton" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/files"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:background="@color/colorPrimaryLight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testText1"
            android:text="Hiroshima.mp3"
            android:textSize="30dp"
            android:textColor="@color/textColorAccent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testText2"
            android:textSize="30dp"
            android:textColor="@color/textColorAccent"
            android:text="stats.mp3"
            android:layout_below="@+id/testText1"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testText3"
            android:textSize="30dp"
            android:textColor="@color/textColorAccent"
            android:text="Verb_Conjugations.mp3"
            android:layout_below="@+id/testText2"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/students"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryLight"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testStudent4"
            android:textSize="30dp"
            android:textColor="@color/textColorAccent"
            android:text="Tim"
            android:layout_below="@+id/testStudent3"
            android:layout_alignStart="@+id/testStudent5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testStudent6"
            android:textSize="30dp"
            android:textColor="@color/textColorAccent"
            android:text="Jane"
            android:layout_below="@+id/testStudent5"
            android:layout_alignStart="@+id/testStudent5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testStudent3"
            android:textSize="30dp"
            android:textColor="@color/textColorAccent"
            android:text="Mike"
            android:layout_below="@+id/testStudent2"
            android:layout_alignStart="@+id/testStudent4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testStudent2"
            android:textSize="30dp"
            android:textColor="@color/textColorAccent"
            android:text="Dave"
            android:layout_below="@+id/testStudent1"
            android:layout_alignStart="@+id/testStudent3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testStudent5"
            android:textSize="30dp"
            android:textColor="@color/textColorAccent"
            android:text="Allen"
            android:layout_marginStart="16dp"
            android:layout_below="@+id/testStudent4"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testStudent1"
            android:text="Phil"
            android:textSize="30dp"
            android:textColor="@color/textColorAccent"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/testStudent2" />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/triangle"
        android:layout_above="@+id/students"
        android:layout_marginBottom="-25dp"
        android:layout_marginLeft="55dp"
        android:id="@+id/studentArrow"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/triangle"
        android:layout_above="@+id/students"
        android:layout_marginBottom="-25dp"
        android:layout_marginLeft="225dp"
        android:visibility="invisible"
        android:id="@+id/fileArrow"/>

</RelativeLayout>
