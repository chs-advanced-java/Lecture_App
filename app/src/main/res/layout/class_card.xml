<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/class_card_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:gravity="center">

    <android.support.v7.widget.CardView android:id="@+id/classCard"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/class_card_height"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">

        <TextView android:id="@+id/className"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Classes!"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="38dp"
            android:textSize="28sp"
            />

        <TextView android:id="@+id/classCardStudentDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class description will go here but i just need to\ntake up some space right now"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="12sp"
            />

        <ImageView android:id="@+id/classCardColor"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@color/a"
            />

        <android.support.v7.widget.Toolbar android:id="@+id/classCardToolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:clickable="true"
            />

    </android.support.v7.widget.CardView>

</LinearLayout>