<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/classCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/class_card_height"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <RelativeLayout android:id="@+id/classCardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/class_card_padding"
        android:paddingBottom="@dimen/class_card_padding"
        android:paddingStart="@dimen/class_card_padding_side"
        android:paddingEnd="@dimen/class_card_padding_side"
        android:background="@drawable/chalkboard">

        <android.support.v7.widget.Toolbar android:id="@+id/classCardToolbar"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:contentInsetLeft="2dp"
            app:contentInsetStart="2dp"
            theme="@style/AppTheme.Toolbar">

            <TextView
                android:id="@+id/className"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spanish I"
                android:textSize="30sp"
                android:textColor="@color/textColorPrimaryLight"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </android.support.v7.widget.Toolbar>
        <!-- Begin card layout -->


        <TextView
            android:id="@+id/classTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plumeri"
            android:textSize="22sp"
            android:textColor="#eeeeee"
            android:layout_below="@+id/classCardToolbar"
            android:layout_marginStart="4dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>