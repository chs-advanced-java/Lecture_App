<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teacher_class_overview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.TeacherClassView"
    tools:showIn="@layout/activity_teacher_class_overview">

    <RelativeLayout android:id="@+id/classOverviewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <!-- PUT CONTENT IN HERE!!! -->

        <include layout="@layout/class_card" android:id="@+id/classTwo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/class_card_height"
            android:layout_marginTop="34dp"
            android:layout_below="@+id/classOne"
            android:layout_alignParentStart="true" />

        <include layout="@layout/class_card" android:id="@+id/classOne"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/class_card_height"
            android:layout_marginTop="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <!-- DO NOT TOUCH THIS -->
    <RelativeLayout android:id="@+id/createClassLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <io.codetail.widget.RevealLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout android:id="@+id/revealLayout"
                android:visibility="invisible"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <TextView android:id="@+id/classNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:text="Class Name:"/>

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/classNameET"
                        android:layout_below="@+id/classNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="#FFF"
                        android:hint="Ex: Geometry"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="DONE"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </LinearLayout>

        </io.codetail.widget.RevealLinearLayout>

    </RelativeLayout>

</RelativeLayout>
