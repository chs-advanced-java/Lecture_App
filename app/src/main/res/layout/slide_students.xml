<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme.Slide">

    <CheckBox
        android:text="Tim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox13"
        android:layout_below="@+id/checkBox12"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Dave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox11"
        android:layout_below="@+id/checkBox10"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Phil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox10"
        android:layout_below="@+id/checkBox8"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewStudentSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Students"
        android:fontFamily="sans-serif-thin"
        android:textSize="28sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:text="To send to the entire class, choose select all. To share with specific students, check only their names."
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textViewStudentSelection"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="Select All"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/checkBox8"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox12"
        android:layout_below="@+id/checkBox11"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:text="Mike" />

    <CheckBox
        android:text="Allen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox9"
        android:layout_below="@+id/checkBox13"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Jane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox15"
        android:layout_below="@+id/checkBox9"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox14"
        android:layout_below="@+id/checkBox15"
        android:layout_alignParentStart="true"
        tools:text="SHMEBULOCK :P" />

</RelativeLayout>