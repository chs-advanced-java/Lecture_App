<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.TeacherMainScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/teacher_home_title"
        android:id="@+id/title"
        android:fontFamily="sans-serif-thin"
        android:textSize="28sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/description"
        android:layout_below="@+id/title"
        android:text="@string/teacher_home_description"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:textAlignment="center" />

    <Button android:id="@+id/buttonClasses"
        android:layout_above="@+id/buttonUpload"
        android:layout_width="3000dp"
        android:layout_height="75dp"
        android:text="My Classes"
        android:textSize = "35sp"
        android:background="@android:color/transparent" />

    <Button android:id="@+id/buttonUpload"
        android:layout_width="3000dp"
        android:layout_height="75dp"
        android:text="Upload"
        android:textSize = "35sp"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        />

    <Button android:id="@+id/buttonRecord"
        android:layout_below="@+id/buttonUpload"
        android:layout_width="3000dp"
        android:layout_height="75dp"
        android:text="Record"
        android:textSize = "35sp"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
