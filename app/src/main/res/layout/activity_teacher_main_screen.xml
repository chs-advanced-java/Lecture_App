<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.TeacherMainScreen">

    <Button android:id="@+id/buttonUpload"
        android:layout_width="3000dp"
        android:layout_height="75dp"
        android:text="Upload"
        android:textSize = "35sp"
        android:background="@drawable/button_round_yellow"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/buttonRecord"
        android:layout_width="3000dp"
        android:layout_height="75dp"
        android:text="Record"
        android:textSize = "35sp"
        android:background="@drawable/button_round_red"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/buttonClasses"
        android:layout_width="3000dp"
        android:layout_height="75dp"
        android:text="My Classes"
        android:textSize = "35sp"
        android:background="@drawable/button_round_green"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
