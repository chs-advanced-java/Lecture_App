<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/studentCardHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
        android:id="@+id/studentCard"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp">

        <RelativeLayout android:id="@+id/studentCardGuts"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/studentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name Last Name"
                android:textSize="16sp"/>

            <TextView android:id="@+id/dateJoined"
                android:layout_below="@+id/studentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joined class: 4/20/69"
                android:textSize="12sp"/>


            <ImageView android:id="@+id/killStudent"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_delete"
                android:layout_centerVertical="true"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="8dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>