<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="16dp">

    <TextView android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your class code is: 3zb8c27n.\nDistribute this to your students."
        android:textSize="16sp"
        android:textColor="@color/textColorPrimary"/>

    <RelativeLayout android:id="@+id/actionMessage"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/message"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView android:id="@+id/email"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_email"
            android:tint="@color/colorPrimary"
            android:layout_centerVertical="true"/>

        <TextView android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email this code"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_toEndOf="@id/email"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>