<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/lectureSelectCardHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/studentSelectCard"
        >

        <RelativeLayout android:id = "@+id/studentSelectCardGuts"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable dummy classes (developer)"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"/>

            <Switch android:id="@+id/dummyClassesSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>


